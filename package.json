{
  "private": true,
  "name": "promotion-docs",
  "version": "1.0.0",
  "scripts": {
    "start": "dumi dev",
    "docs:build": "dumi build",
    "docs:deploy": "gh-pages -d docs-dist",
    "build": "father-build",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage",
    "prepublishOnly": "npm run build",
    "update:npm": "ncu -u && npm install"
  },
  "module": "es/index.js",
  "typings": "es/index.d.ts",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "react": "^18.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.1",
    "@umijs/fabric": "^2.10.0",
    "@umijs/test": "^3.5.25",
    "dumi": "^1.1.42",
    "father-build": "^1.22.3",
    "gh-pages": "^4.0.0",
    "lint-staged": "^13.0.0",
    "npm-check-updates": "^13.1.1",
    "prettier": "^2.6.2",
    "yorkie": "^2.0.0"
  }
}
